{
  "name": "@dimerapp/dfile",
  "version": "1.0.0",
  "description": "Dimer file to convert it to markdown and check for linting errors",
  "main": "src/File.js",
  "files": [
    "src/File.js"
  ],
  "scripts": {
    "prepublishOnly": "pkg-ok",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "japa",
    "commit": "git-cz",
    "lint": "standard"
  },
  "keywords": [
    "dimer"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^1.0.9",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "dedent": "^0.7.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "mrm": "^1.2.1",
    "nyc": "^12.0.2",
    "pkg-ok": "^2.2.0",
    "standard": "^11.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "test",
      "japaFile.js"
    ]
  },
  "dependencies": {
    "@dimerapp/markdown": "^1.0.2",
    "fs-extra": "^7.0.0",
    "gray-matter": "^4.0.1",
    "slugify": "^1.3.0",
    "vfile": "^3.0.0"
  }
}
